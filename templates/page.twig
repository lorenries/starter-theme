{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">

			{% if post.thumbnail.src %}

				<section class="w-100 flex justify-center items-center flex-wrap">
				
					<div class="w-100">
						<div style="background: url({{post.thumbnail.src}}) no-repeat center center; background-size: cover;" class="w-100 vh-60">
						</div>
					</div>

					<div class="bg-near-white tc mw8 ph4 pt2" style="margin-top: -60px; min-width: 50%;">
						<h1 class="text-background-black f1 center tc headline"><span>{{post.title}}</span></h1>
					</div>

				</section>
			
			{% endif %}

			<section class="article-content mw8 ph3 center wola-gray">
			
				{% if not post.thumbnail.src %}

					<h1 class="article-h1 f1 f-subheadline-l tc pv2 pv4-l">{{post.title}}</h1>

				{% endif %}

				<div class="article-body mw7 lh-copy f5 f4-ns wola-gray center ph3 pb4">
					{{post.content}}
				</div>
			</section>

		</article>
	</div><!-- /content-wrapper -->
{% endblock %}