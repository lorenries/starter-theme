{% extends 'components/photo-essay/image-quote.twig' %}

{% block quote %}
	<img data-srcset="{{ TimberImage(item.image).src|resize(400) }} 400w, {{ TimberImage(item.image).src|resize(800) }} 800w, {{ TimberImage(item.image).src|resize(1200) }} 1200w, {{ TimberImage(item.image).src }} 1x" class="w-100 w-60-ns lozad block-quote"/>
	<blockquote class="relative image-quote w-100 w-40-ns f4 f2-l pt3 pt0-ns pl2 pl3-m pl4-l bl b--wola-blue bw3 lh-title">{{ TimberImage(item.image).caption }}</blockquote>
{% endblock %}