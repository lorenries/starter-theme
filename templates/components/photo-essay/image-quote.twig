{% if TimberImage(item.image).caption %}
<div class="flex flex-column flex-row-ns items-center justify-center pv4 pv5-ns o-0">
	{% block quote %}
	{% endblock %}
</div>
{% else %}
	<div class="o-0"><img data-srcset="{{ TimberImage(item.image).src|resize(400) }} 400w, {{ TimberImage(item.image).src|resize(800) }} 800w, {{ TimberImage(item.image).src|resize(1200) }} 1200w, {{ TimberImage(item.image).src }} 1x" class="w-100 lozad"/></div>
{% endif %}